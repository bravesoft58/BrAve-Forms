# BrAve Forms Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://brave:password@localhost:5432/brave_forms?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="redis_secure_pass"

# Clerk Authentication (Required)
CLERK_SECRET_KEY="sk_test_"
CLERK_PUBLISHABLE_KEY="pk_test_"

# Weather APIs (At least one required)
NOAA_API_KEY=""
OPENWEATHER_API_KEY=""

# AWS S3 (Required for production)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME="brave-forms-photos"

# Application
NODE_ENV="development"
PORT="4000"
NEXT_PUBLIC_API_URL="http://localhost:4000/graphql"

# Push Notifications (Optional)
FCM_SERVER_KEY=""
APNS_KEY_ID=""
APNS_TEAM_ID=""

# Monitoring (Optional)
SENTRY_DSN=""
DATADOG_API_KEY=""

# Feature Flags
ENABLE_OFFLINE_MODE="true"
ENABLE_PUSH_NOTIFICATIONS="false"
ENABLE_WEATHER_MONITORING="true"
MAX_OFFLINE_DAYS="30"