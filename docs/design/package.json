{
  "name": "brave-forms",
  "version": "1.0.0",
  "private": true,
  "description": "Construction compliance platform with EPA SWPPP management",
  "repository": {
    "type": "git",
    "url": "https://github.com/brave-forms/brave-forms.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "test:e2e": "pnpm run -r test:e2e",
    "test:compliance": "pnpm run -r test:compliance",
    "test:offline": "pnpm run -r test:offline",
    "lint": "pnpm run -r lint",
    "type-check": "pnpm run -r type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "qa": "pnpm run lint && pnpm run type-check && pnpm run test",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "clean": "pnpm run -r clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}